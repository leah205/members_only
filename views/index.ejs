<!DOCTYPE html>
<html>
  <%- include('partials/header')%>
  <body>
    <%- include('partials/nav')%>
    <% if(locals.user){%>
      <h1>Welcome back, <%=  locals.user.first_name%> <%=  locals.user.last_name%></h1>
      <form action="/post-message" metHod = 'POST'>
        <textarea name="message" id="message"></textarea>
        <button type = 'submit'>Post</button>
      </form>
    <% } else {%>
    <%}%>
      <h1>Messages</h1>
    <div class="message-container">
        <% locals.messages.forEach((message) => {%>
            <div class="message">
               <% if(locals.user && locals.user.ismember){ %> 
             
                <p><%=message.first_name%> <%=message.last_name%></p>
                <p><%=message.date_posted%></p>
               <%}%>
             <p><%=  message.text %></p>
            </div>
        <% }) %>
    </div>
  </body>
</html>
